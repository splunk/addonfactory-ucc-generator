{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./dist/lib",
    "outDir": "./dist/lib",
    "jsx": "react",
    "lib": ["es2022", "dom"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "bundler",
    "module": "es2020"
  },
  "include": [
    "src/types/*.d.ts",
    "src/publicApi.ts"
  ],
  "exclude": [
    "**/stories/**/*",
    "**/jest.setup.ts",
    "**/tests/**/*",
    "**/*.test.*",
    "*/__mocks__/**/*",
    "src/mocks/**/*",
    "src/public/**/*",
  ]
}
