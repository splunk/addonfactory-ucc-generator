                "task": [
                    "Create",
                    "Update"
                ],
                "supportsAdhoc": true,
                "subject": [
                    "endpoint"
                ],
                "category": [
                    "Information Conveyance",
                    "Information Portrayal"
                ],
                "technology": [
                    {
                        "version": [
                            "1.0.0"
                        ],
                        "product": "Test Incident Update",
                        "vendor": "Splunk"
                    }
                ],
                "drilldownUri": "search?q=search%20index%3D\"_internal\"&earliest=0&latest=",
                "sourcetype": "test:incident"
            },
            "entity": [
                {
                    "type": "text",
                    "label": "Name",
                    "field": "name",
