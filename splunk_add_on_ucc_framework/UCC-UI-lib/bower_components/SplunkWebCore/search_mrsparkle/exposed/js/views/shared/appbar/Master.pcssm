/*  App Bar */
/*  ========== */
/*  Note, the menus that open from the app bar are in a separate file navs-app */


.view {
    all: initial;
    display: block;

    color: $white;
    background-color: color($grayLight l(-8%));

    min-height:40px;
    position:relative;
    clear:both;
    @mixin clearfix;

    font-size: $baseFontSize;
    font-family: $baseFontFamily;

    /*  override normal pills style for header */


    .shared-appbar-navitem > .dropdown-menu {
        width: 300px;
    }

    ul.slidenavList li > a {
        border-top: none;
    }
}

.name {
    margin: 0;
    line-height: 40px;
    font-weight:200;
    font-size:18px;
    height: 40px;
    font-weight: 200;
    overflow: hidden;
    float: right;

     a {
        color: $white;
        display: block;
        padding: 0 20px;
        position: relative;
        text-decoration: none;

        &:hover {
            text-decoration: none;
            background-color: transparent; /*  fallback */
            background: rgba(255,255,255,0.07);
        }

        &:focus {
            box-shadow: inset 0 0 8px 0 rgba(255,255,255,0.07);
            background: rgba(255,255,255,0.11);
            text-decoration: none;
        }
    }
}

.link
.logo img {
    max-height: 40px;
}

[data-action=resizing-nav-right] {
    position: absolute;
    right: 10px;
}
