.view {
    composes: menu from '../../MenuDialog.pcssm';
}

.iconUser {
    composes: icon from '../Master.pcssm'
}

.realname {
    display: inline-block;
    vertical-align: middle;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: calc((100vw - 800px) / 2);
}

.realnameCloud {
    composes: realname;
    max-width: 100px;
}

@media only screen and (min-width: 1100px) {
  .realnameCloud {
      max-width: 150px;
  }
}

@media only screen and (min-width: 1500px) {
  .realnameCloud {
      max-width: 250px;
  }
}

@media only screen and (min-width: 1700px) {
  .realnameCloud {
      max-width: 350px;
  }
}
