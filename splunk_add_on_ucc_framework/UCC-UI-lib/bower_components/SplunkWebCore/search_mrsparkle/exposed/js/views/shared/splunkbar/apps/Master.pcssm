/* toggle */

.view {
    composes: view from '../../Menu.pcssm';
    height: 25px;
}

.toggle {
    composes: toggle from '../Master.pcssm';
}

.appName {
    display: inline-block;
    vertical-align: middle;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: calc((100vw - 800px) / 2);
}

.appNameCloud {
    composes: appName;
    max-width: 100px;
}

@media only screen and (min-width: 1100px) {
  .appNameCloud {
      max-width: 150px;
  }
}

@media only screen and (min-width: 1500px) {
  .appNameCloud {
      max-width: 250px;
  }
}

@media only screen and (min-width: 1700px) {
  .appNameCloud {
      max-width: 350px;
  }
}
